@model BulkyBook.Models.Models.Category
@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Create Category";
}

<form method="post">
    <div class="row p-3 border">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        @if (Model.CategoryId != 0)
        {
            // Edit
            title = "Edit Category";
        }
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CategoryName"></label>
                </div>
                <div class="col-8">
                    <input class="form-control" asp-for="CategoryName"/>
                    <span class="text-danger" asp-validation-for="CategoryName"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    @if (Model.CategoryId != 0)
                    {
                        <partial name="_EditAndBackToListButton" model="Model.CategoryId"/>
                    }
                    else
                    {
                        <partial name="_CreateAndBackToListButton"/>
                    }
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}


