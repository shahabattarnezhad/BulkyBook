@model BulkyBook.Models.Models.CoverType
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Create Cover Type";
}

<form method="post">
    <div class="row p-3 border">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CoverTypeName"></label>
                </div>
                <div class="col-8">
                    <input class="form-control" asp-for="CoverTypeName" />
                    <span class="text-danger" asp-validation-for="CoverTypeName"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    <partial name="_CreateAndBackToListButton" />
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}